<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= favicon_tag 'images/favicon.png' %>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-139418133-2"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-139418133-2');
    </script>

    <!-- HTML Meta Tags -->
    <meta name="description" content="Design et conception de sites internet, identités visuelles, logotypes, illustrations.">

    <!-- Google / Search Engine Tags -->
    <meta itemprop="name" content=" Sybille Cordeau | Graphiste Webdesigner freelance à Bordeaux">
    <meta itemprop="description" content="Design et conception de sites internet, identités visuelles, logotypes, illustrations.">
    <meta itemprop="image" content="https://www.sybillecordeau.fr/images/portrait1.png">

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://www.sybillecordeau.fr">
    <meta property="og:type" content="website">
    <meta property="og:title" content=" Sybille Cordeau | Graphiste Webdesigner freelance à Bordeaux">
    <meta property="og:description" content="Design et conception de sites internet, identités visuelles, logotypes, illustrations.">
    <meta property="og:image" content="https://www.sybillecordeau.fr/images/portrait1.png">

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content=" Sybille Cordeau | Graphiste Webdesigner freelance à Bordeaux">
    <meta name="twitter:description" content="Design et conception de sites internet, identités visuelles, logotypes, illustrations.">
    <meta name="twitter:image" content="https://www.sybillecordeau.fr/images/portrait1.png">

  </head>
  <body>
    <%= partial 'layouts/navbar' %>
    <%= yield %>
    <%= partial 'layouts/footer' %>
  </body>
</html>
